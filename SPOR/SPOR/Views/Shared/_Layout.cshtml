<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/themes/base/jquerybasecss")
    @Styles.Render("~/Content/themes/base/jquerytrontasticcss")
    @Styles.Render("~/Content/sagecss")
</head>
<body class="sage">
    <div class="navbar navbar-inverse navbar-fixed-top ui-widget-header">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand sage">
                    <span class="glyphicon glyphicon-asterisk"></span>
                </div>
                @*@Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "nabglyphicon glyphicon-asterisk" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About Me", "Index", "Home", new { @style = "color: black" })</li>
                    <li>@Html.ActionLink("Games", "Index", "Home", new { @style = "color: black" })</li>
                    <li>@Html.ActionLink("Books", "Index", "Home", new { @style = "color: black" })</li>
                    <li>@Html.ActionLink("Flora", "Index", "Home", new { @style = "color: black" })</li>
                    <li>@Html.ActionLink("Fauna", "Index", "Home", new { @style = "color: black" })</li>
                    <li>@Html.ActionLink("Contact", "Index", "Home", new { @style = "color: black" })</li>
                    <li>@Html.ActionLink("Other", "Index", "Home", new { @style = "color: black" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - A.J.W.</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/sageui")
    @RenderSection("scripts", required: false)
</body>
</html>