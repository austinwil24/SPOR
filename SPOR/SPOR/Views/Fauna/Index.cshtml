@model SPOR.Models.GenericPageModel

@{
    ViewBag.Title = Model.Title;
}

<div>
    <p style="margin-top: 25px">
        <span class="h1 sage-title">@ViewBag.Title</span>
    </p>
</div>
<hr class="sage" />

@*Reef NUVO Fusion 20 Gallon*@

<div class="media sage">
    <div class="media-left">
        <a href="@Url.Action("PhotoCollection", "Fauna", new { source = "ReefNUVOFusion20" })">
            <img class="media-object" src="~/Content/images/flora/tillandsia/tillandsia_tectorum.png" alt="NUVO Fusion 20">
        </a>
    </div>
    <div class="media-body">
        <div class="h2 media-heading sage">Aquarium Photos</div>
        <span>
            Tillandsias (air plants) are plants that can grow without soil and can typically be found growing on trees in humid climates.
            I started a small collection a while back that is slowly growing as I find new and unique species.
            Here is an active list of my current collection.
        </span>
        <span style="font-style: italic"> - Last Updated on 5/24/2016</span>
    </div>
</div>


